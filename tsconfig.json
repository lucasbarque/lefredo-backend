{
  "include": [
    "src/@types/**/*.d.ts",
    "src/**/*",
    "prisma/**/*.ts",
    "commitlint.config.mjs"
   ],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": false,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@services/*": ["./src/http/services/*"],
      "@controllers/*": ["src/http/rest/controllers/*"],
      "@models/*": ["src/http/rest/entities/*"],
      "@inputs/*": ["src/http/rest/dto/*"],
    }
  }
}
