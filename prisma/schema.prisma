// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
}

model User {
  id                 String  @id @default(uuid())
  name               String
  email              String  @unique
  clerkId            String  @unique
  active             Boolean @default(true)
  role               Role    @default(ADMIN)
  onboardingFinished Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId String?

  @@map("users")
}

model Restaurant {
  id   String @id @default(uuid())
  name String
  slug String @unique

  User User[]
  Menu Menu[]

  welcomeMessage String?
  logo           String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([slug, id])
  @@map("restaurants")
}

model Menu {
  id    String @id @default(uuid())
  title String

  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId String

  Sections Section[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("menus")
}

model Section {
  id          String  @id @default(uuid())
  title       String
  description String?
  slug        String  @unique
  isActive    Boolean @default(false)

  menu   Menu   @relation(fields: [menuId], references: [id], onDelete: Cascade)
  menuId String

  Dish Dish[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sections")
}

model Dish {
  id          String  @id @default(uuid())
  title       String
  description String?
  price       Int
  isActive    Boolean @default(false)

  section   Section @relation(fields: [sectionId], references: [id])
  sectionId String

  dishSpecs   DishSpecsDishes[]
  dishExtras  DishExtras[]
  dishFlavors DishFlavors[]
  dishMedias  DishMedias[]

  portion          String?
  prepTime         String?
  dishExtrasOrder  Json?
  dishFlavorsOrder Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("dishes")
}

model DishFlavors {
  id          String  @id @default(uuid())
  title       String
  label       String
  description String?
  price       Int?

  Dish   Dish?   @relation(fields: [dishId], references: [id])
  dishId String?

  dishFlavorsMedias DishFlavorsMedias[]

  @@map("dish_flavors")
}

model DishMedias {
  id    String @id @default(uuid())
  title String
  url   String

  Dish   Dish   @relation(fields: [dishId], references: [id])
  dishId String

  @@map("dish_medias")
}

model DishFlavorsMedias {
  id    String @id @default(uuid())
  title String
  url   String

  DishFlavors  DishFlavors? @relation(fields: [dishFlavorId], references: [id])
  dishFlavorId String?

  @@map("dish_flavors_medias")
}

model DishExtras {
  id    String @id @default(uuid())
  title String
  price Int

  Dish   Dish?   @relation(fields: [dishId], references: [id], onDelete: Cascade)
  dishId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("dish_extras")
}

enum SpecsKey {
  vegetarian
  lactfree
  vegan
  cold
  hot
  organic
  suggarfree
  natural
  highlighted
}

model DishSpecs {
  id          String   @id @default(uuid())
  title       String
  description String
  key         SpecsKey

  dishSpecs DishSpecsDishes[]

  @@map("dish_specs")
}

model DishSpecsDishes {
  DishSpecs   DishSpecs? @relation(fields: [dishSpecsId], references: [id], onDelete: Cascade)
  dishSpecsId String
  Dish        Dish?      @relation(fields: [dishId], references: [id], onDelete: Cascade)
  dishId      String

  @@id([dishId, dishSpecsId])
  @@map("dishes_specs_dish")
}
